{
  "name": "octocommerce_backend",
  "version": "0.0.1",
  "description": " ",
  "author": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/auth/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/auth/test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:generate:base": "npm run typeorm -- -d ./libs/common/src/database/migration.config.ts migration:generate ./migrations/$MIGRATION_ENV_PATH/$SERVICE_MIGRATION/$SERVICE_MIGRATION",
    "migration:run:base": "npm run typeorm migration:run -- -d ./libs/common/src/database/migration.config.ts",
    "migration:generate:auth": "POSTGRES_ENTITIES=access,endpoint,user SERVICE_MIGRATION=auth pnpm run migration:generate:base",
    "migration:run:auth": "SERVICE_MIGRATION=auth pnpm run migration:run:base",
    "migration:generate:bot": "POSTGRES_ENTITIES=scrape,telegram,user SERVICE_MIGRATION=bot pnpm run migration:generate:base",
    "migration:run:bot": "SERVICE_MIGRATION=bot pnpm run migration:run:base",
    "migration:generate:file": "POSTGRES_ENTITIES=test SERVICE_MIGRATION=file pnpm run migration:generate:base",
    "migration:run:file": "SERVICE_MIGRATION=file pnpm run migration:run:base",
    "migration:generate:notification": "POSTGRES_ENTITIES=message,user SERVICE_MIGRATION=notification pnpm run migration:generate:base",
    "migration:run:notification": "SERVICE_MIGRATION=notification pnpm run migration:run:base",
    "migration:generate:storage": "POSTGRES_ENTITIES=private-file,user SERVICE_MIGRATION=storage pnpm run migration:generate:base",
    "migration:run:storage": "SERVICE_MIGRATION=storage pnpm run migration:run:base",
    "migration:generate:store": "POSTGRES_ENTITIES=answer,category,contact,delivery,delivery-method,order-item,order,payment,product,external-seller,external-category-seller,packaging-cost,question,review,setting,specification,stock,user,short-message SERVICE_MIGRATION=store pnpm run migration:generate:base",
    "migration:run:store": "SERVICE_MIGRATION=store pnpm run migration:run:base",
    "migration:generate": "POSTGRES_DATABASE=${DPREFEX}auth pnpm run migration:generate:auth ; POSTGRES_DATABASE=${DPREFEX}bot pnpm run migration:generate:bot ; POSTGRES_DATABASE=${DPREFEX}file pnpm run migration:generate:file ; POSTGRES_DATABASE=${DPREFEX}notification pnpm run migration:generate:notification ; POSTGRES_DATABASE=${DPREFEX}storage pnpm run migration:generate:storage ; POSTGRES_DATABASE=${DPREFEX}store pnpm run migration:generate:store ",
    "migration:run": "POSTGRES_DATABASE=${DPREFEX}auth pnpm run migration:run:auth ; POSTGRES_DATABASE=${DPREFEX}bot pnpm run migration:run:bot ; POSTGRES_DATABASE=${DPREFEX}file pnpm run migration:run:file ; POSTGRES_DATABASE=${DPREFEX}notification pnpm run migration:run:notification ; POSTGRES_DATABASE=${DPREFEX}storage pnpm run migration:run:storage ; POSTGRES_DATABASE=${DPREFEX}store pnpm run migration:run:store ",
    "migration:generate:developing": "MIGRATION_ENV_PATH=developing DPREFEX= pnpm run migration:generate",
    "migration:run:developing": "MIGRATION_ENV_PATH=developing DPREFEX= pnpm run migration:run",
    "migration:generate:stage": "MIGRATION_ENV_PATH=stage DPREFEX=stage_ pnpm run migration:generate",
    "migration:run:stage": "MIGRATION_ENV_PATH=stage DPREFEX=stage_ pnpm run migration:run",
    "migration:generate:production": "MIGRATION_ENV_PATH=production DPREFEX=production_ pnpm run migration:generate",
    "migration:run:production": "MIGRATION_ENV_PATH=production DPREFEX=production_ pnpm run migration:run"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-socket.io": "^10.3.10",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@socket.io/redis-adapter": "^8.3.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "axios": "^1.7.2",
    "cache-manager": "^5.6.1",
    "cache-manager-redis-store": "^3.0.1",
    "cache-manager-redis-yet": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "joi": "^17.12.3",
    "kafkajs": "^2.2.4",
    "moment-timezone": "^0.5.45",
    "nestjs-paginate": "^8.6.2",
    "nestjs-pino": "^4.0.0",
    "pg": "^8.11.5",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.2",
    "redis": "^4.6.14",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  },
  "main": ".eslintrc.js",
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
